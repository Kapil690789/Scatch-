<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create New Product</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <% if (sucess.length > 0) { %>
        <div class="absolute top-5 left-1/2 transform -translate-x-1/2 p-3 rounded-md bg-blue-500">
            <span class="inline-block text-white">
                <%= sucess %>
            </span>
        </div>
    <% } %>
    <div class="container mx-auto py-8">
        <!-- Header Section -->
        <div class="flex justify-between items-center mb-8">
            <div class="flex flex-col">
                <a class="block w-fit mb-2 text-blue-500 hover:text-blue-700" href="/products">All Products</a>
                <a class="block w-fit mb-2 text-blue-500 hover:text-blue-700" href="/products/create">Create New Product</a>
            </div>
        </div>

        <!-- Main Content Section -->
        <main class="w-3/4 bg-white p-8 shadow-lg ml-auto mr-auto rounded">
            <h2 class="text-xl font-bold mb-4">Create New Product</h2>

            <form autocomplete="off" action="/products/create" method="post" enctype="multipart/form-data">
                <!-- Product Details Section -->
                <div class="mb-6">
                    <h3 class="text-lg font-semibold mb-2">Product Details</h3>

                    <div class="mb-4">
                        <label class="block mb-2 font-medium" for="image">Product Image</label>
                        <input id="image" name="image" type="file" class="py-2 px-4 rounded border w-full">
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <input name="name" type="text" placeholder="Product Name" class="border p-2 rounded w-full">
                        </div>
                        <div>
                            <input name="price" type="text" placeholder="Product Price" class="border p-2 rounded w-full">
                        </div>
                        <div>
                            <input name="discount" type="text" placeholder="Discount Price" class="border p-2 rounded w-full">
                        </div>
                    </div>
                </div>

                <!-- Panel Details Section -->
                <div class="mb-6">
                    <h3 class="text-lg font-semibold mb-2">Panel Details</h3>
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <input name="panelSize" type="text" placeholder="Panel Size" class="border p-2 rounded w-full">
                        </div>
                        <div>
                            <input name="panelType" type="text" placeholder="Panel Type" class="border p-2 rounded w-full">
                        </div>
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="flex justify-end">
                    <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                        Create Product
                    </button>
                </div>
            </form>
        </main>
    </div>

</body>
</html>
